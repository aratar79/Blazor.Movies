@typeparam Titem

@if (ListItems == null)
{
    @if (Loading == null)
    {
        <text>Loading...</text>
    }
    else
    {
        @Loading
    }
}
else if (ListItems.Count == 0)
{
    @if (NoRecords == null)
    {
        <text>No hay registros para mostrar</text>
    }
    else
    {
        @NoRecords
    }
}
else
{
    foreach (var elemento in ListItems)
    {
        @Records(elemento)
    }
}

@code {
    [Parameter] public RenderFragment Loading { get; set; }
    [Parameter] public RenderFragment NoRecords { get; set; }
    [Parameter] public RenderFragment<Titem> Records { get; set; }
    [Parameter] public List<Titem> ListItems { get; set; }
}